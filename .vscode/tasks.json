{
    // Defines tasks for building and running the TypeScript project
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Install Dependencies",
            "type": "shell",
            "command": "npm install",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Installs all project dependencies."
        },
        {
            "label": "Build Project",
            "type": "shell",
            "command": "npm run build",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Compiles the TypeScript project."
        },
        {
            "label": "Run Project",
            "type": "shell",
            "command": "npm start",
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "detail": "Runs the project."
        },
        {
            "label": "Clean Build",
            "type": "shell",
            "command": "npm run clean",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Cleans the build artifacts."
        }
    ]
}